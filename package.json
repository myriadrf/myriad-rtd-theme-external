{
  "scripts": {
    "start": "cd ./docs && python3 -m venv venv && . ./venv/bin/activate && pip install -r requirements.txt",
    "build": "cd ./docs && . ./venv/bin/activate && make html",
    "watch": "nodemon --watch './docs/**/*.rst' --ext rst --exec 'npm run build'",
    "serve": "browser-sync start --server docs/_build/html --port 8000 --files 'docs/_build/html/**/*.html'",
    "dev": "npm run build && npm-run-all --parallel serve watch"
  },
  "dependencies": {},
  "devDependencies": {
    "browser-sync": "^3.0.2",
    "nodemon": "^3.0.3",
    "npm-run-all": "^4.1.5"
  }
}
